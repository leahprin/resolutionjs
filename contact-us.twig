{% extends "layouts/main.twig" %}

{% block content %}
	<div class="contact">
		<div class="contact__container">
			<div class="contact__content_wrap">
				<div class="contact__content">
					<h1 class="contact__headline">{{ entry.title }}</h1>
					<div class="contact__text">{{ entry.contactText }}</div>
				</div>
			</div>
			<div class="blogger__wrap">
				{% set blogs = craft.categories.group('blogs') %}
				{% for blog in blogs %}
					<img src="{{ blog.authorImage.first().url }}" alt="">
				{% endfor %}
			</div>
			<div class="contact__form-title">{{ entry.contactNumber }}</div>
			<div class="contact__form">
				<form action="/">
					<input type="text" placeholder="Name" class="contact__form--control">
					<input type="text" placeholder="Email" class="contact__form--control">
					<input type="text" placeholder="Phone" class="contact__form--control">
					<textarea type="text" placeholder="Message" class="contact__form--control" id="contactMessage"></textarea>
					<button type="submit" href="#" class="contact__submit">Submit</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}